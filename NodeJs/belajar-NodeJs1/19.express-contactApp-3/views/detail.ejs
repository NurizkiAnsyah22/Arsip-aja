<div class="contaier mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail contact</h2>
      <% if (!contact) { %>
      <div class="alert alert-danger fw-bold" role="alert">
        Data Kontak tidak ada! <br />
        <a href="/contact" class="alert-link fw-normal"><i class="bi bi-skip-backward-btn-fill"></i>kembali ke kontak</a>.
      </div>
      <% } else { %>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.nama %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary"><%= contact.noHp %></h6>
          <p class="card-text"><%= contact.email %></p>
          <a href="/contact/delete/<%= contact.nama %>" class="btn btn-danger badge" onclick="return confirm('Apakah anda yakin hapus contact ini?')"> Hapus</a>
          <a href="/contact/edit/<%= contact.nama %>" class="btn btn-primary badge"> Edit</a>
          <a href="/contact" class="card-link d-block mt-3"><i class="bi bi-skip-backward"></i> Kembali ke list contact</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
